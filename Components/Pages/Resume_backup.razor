@page "/backup"
@rendermode InteractiveServer
@using System.Text
@using System.Globalization

@*
    Interactive Resume Component for Blazor - Redesigned for a Modern, Tech-focused Look
*@

<div class="resume-container dark font-sans">

    <header class="header-section">
        <img src="https://placehold.co/100x100/0891b2/ffffff?text=JD" alt="Jane Doe" class="profile-image">
        <div class="header-text">
            <h1 class="text-4xl font-bold text-white">Jane 'Hex' Doe</h1>
            <p class="text-cyan-400 text-lg">Principal Security Engineer</p>
        </div>
    </header>

    <nav class="tab-navigation">
        <ul class="tab-list">
            @foreach (var tab in tabs)
            {
                var isActive = tab == activeTab;
                var activeClass = isActive ? "active" : "";
                <li class="tab-item">
                    <button @onclick="() => SetActiveTab(tab)" class="tab-button @activeClass">
                        @tab
                    </button>
                </li>
            }
        </ul>
    </nav>

    <main class="content-area">
        <div @key="activeTab">
            @switch (activeTab)
            {
                case "Dashboard":
                    <section>
                        <h2 class="section-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M12 21a9 9 0 1 0 0-18 9 9 0 0 0 0 18Z" /><path d="M12 12a4 4 0 1 0 0-8 4 4 0 0 0 0 8Z" /><path d="M12 14c-2.28 0-4.42.86-6 2.34" /></svg>
                            Personal Intel
                        </h2>
                        <ul class="grid grid-cols-1 md:grid-cols-2 dashboard-list">
                            <li class="info-item"><strong>Email:</strong> jane.doe@securenet.dev</li>
                            <li class="info-item"><strong>Phone:</strong> (123) 456-7890</li>
                            <li class="info-item"><strong>Location:</strong> Aliso Viejo, CA</li>
                            <li class="info-item"><strong>LinkedIn:</strong> linkedin.com/in/janedoe-sec</li>
                            <li class="info-item"><strong>GitHub:</strong> github.com/JaneHexDoe</li>
                            <li class="info-item"><strong>Blog:</strong> janehexdoe.dev/blog</li>
                        </ul>
                        <h2 class="section-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M12 21a9 9 0 1 0 0-18 9 9 0 0 0 0 18Z" /><path d="M12 12a4 4 0 1 0 0-8 4 4 0 0 0 0 8Z" /><path d="M12 14c-2.28 0-4.42.86-6 2.34" /></svg>
                            Bio
                        </h2>
                        <p class="mt-8 text-gray-300 leading-relaxed border-l-4 border-cyan-500 pl-4">
                            A results-oriented and strategic Principal Security Engineer with over 10 years of experience in threat modeling, penetration testing, and building secure-by-design cloud infrastructures. Proven ability to lead high-performing security teams and translate complex technical risks into actionable business insights.
                        </p>
                    </section>
                    break;
                case "Skills":
                    <section>
                        <h2 class="section-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><polyline points="16 18 22 12 16 6" /><polyline points="8 6 2 12 8 18" /></svg>
                            Technical Arsenal
                        </h2>
                        <div class="space-y-8">
                            <div>
                                <h3 class="subsection-title">Core Competencies</h3>
                                <div class="skills-grid">
                                    @foreach (var skill in techSkills) { <span class="skill-tag">@skill</span> }
                                </div>
                            </div>
                            <div>
                                <h3 class="subsection-title">Soft Skills & Methodologies</h3>
                                <div class="skills-grid">
                                    @foreach (var skill in softSkills) { <span class="skill-tag soft-skill">@skill</span> }
                                </div>
                            </div>
                            <div>
                                <h3 class="subsection-title">Languages</h3>
                                <div class="skills-grid">
                                    @foreach (var lang in languages)
                                    {
                                        <span class="skill-tag language-skill">@($"{lang.Name} ({lang.Proficiency})")</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </section>
                    break;
                case "Certifications":
                    <section>
                        <h2 class="section-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" /><path d="M17 3.34a10 10 0 1 1-14.995 8.984L2 12l.005-.324A10 10 0 0 1 17 3.34Z" /></svg>
                            Certifications
                        </h2>
                        <ul class="space-y-6">
                            @foreach (var cert in certifications)
                            {
                                <li class="item-card">
                                    <h3 class="item-title">@cert.Name</h3>
                                    <p class="item-subtitle">@cert.IssuingBody - Issued @cert.DateIssued</p>
                                </li>
                            }
                        </ul>
                    </section>
                    break;
                case "Experience":
                    <section>
                        <h2 class="section-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M3 3v18h18" /><path d="m19 9-5 5-4-4-3 3" /></svg>
                            Career History
                        </h2>
                        <div class="timeline-container">
                             <ul class="timeline">
                                @foreach(var exp in experiences)
                                {
                                <li class="item-card">
                                    <div class="flex justify-between items-start">
                                        <div>
                                            <h3 class="item-title">@exp.JobTitle</h3>
                                            <p class="item-subtitle">@exp.Company</p>
                                        </div>
                                        <span class="text-sm text-gray-400 font-medium">@exp.DateRange</span>
                                    </div>
                                    <ul class="mt-4 list-disc list-inside space-y-2 text-gray-300">
                                        @foreach(var duty in exp.Responsibilities) { <li>@duty</li> }
                                    </ul>
                                </li>
                                }
                            </ul>
                        </div>
                    </section>
                    break;
                case "Education":
                    <section>
                        <h2 class="section-title">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M14 22v-4a2 2 0 0 0-2-2v0a2 2 0 0 0-2 2v4" /><path d="M18 10a6 6 0 0 0-12 0" /><path d="M2 10h20" /><path d="M6 10a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z" /><path d="M14 4a2 2 0 1 1-4 0 2 2 0 0 1 4 0Z" /></svg>
                            Education
                        </h2>
                        <ul class="space-y-6">
                            @foreach (var edu in education)
                            {
                                <li class="item-card">
                                    <h3 class="item-title">@edu.Degree</h3>
                                    <p class="item-subtitle">@edu.Institution</p>
                                    <p class="text-sm text-gray-400 mt-1">@edu.Year</p>
                                </li>
                            }
                        </ul>
                    </section>
                    break;
            }
        </div>
    </main>
</div>

<style>
    @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Roboto+Mono:wght@500;700&display=swap');

    html, body {
        margin: 0;
        padding: 0;
        overflow: hidden; /* This stops the "bounce" scroll effect */
        height: 100%;
    }
    
    :root {
        --bg-primary: #111827;
        --bg-secondary: #1f2937;
        --bg-tertiary: #374151;
        --accent-color: #06b6d4;
        --text-primary: #f9fafb;
        --text-secondary: #d1d5db;
        --border-color: #4b5563;
        --font-sans: 'Inter', sans-serif;
        --font-mono: 'Roboto Mono', monospace;
    }

    .resume-container.dark {
        background-color: var(--bg-primary);
        background-image: linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
        background-size: 2rem 2rem;
        color: var(--text-primary);
        box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        height: 100vh; /* Lock height to the viewport */
        overflow: hidden; /* Prevent the container itself from scrolling */
        display: flex; /* Use flexbox for layout */
        flex-direction: column; /* Stack children vertically */
        width: 100%;
        font-family: var(--font-sans);
        font-size: 16px;
    }

    /* Apply mono font to headings for a tech feel */
    h1, h2, h3, .item-title {
        font-family: var(--font-mono);
    }

    .header-section {
        background-color: var(--bg-secondary);
        padding: 1rem;
        display: flex;
        align-items: center;
        justify-content: center; /* ADD THIS LINE */
        border-bottom: 1px solid var(--border-color);
    }

    .profile-image {
        width: 3.5rem;
        height: 3.5rem;
        border-radius: 9999px;
        border: 3px solid var(--accent-color);
    }

    .text-cyan-400, .section-title .icon, .info-item strong {
        text-shadow: 0 0 2px rgba(6, 182, 212, 0.5),   /* MODIFIED */
        0 0 4px rgba(6, 182, 212, 0.3),   /* MODIFIED */
        0 0 6px rgba(6, 182, 212, 0.15); /* MODIFIED */
    }

    .tab-navigation { background-color: var(--bg-secondary); }
    .tab-list { display: flex; list-style-type: none; padding: 0; margin: 0; }
    .tab-item { flex: 1 1 0; }
    .tab-button {
        width: 100%;
        padding: 1rem 0.5rem;
        font-weight: 600;
        color: var(--text-secondary);
        background-color: transparent;
        border: none;
        border-bottom: 3px solid transparent;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
    }
    .tab-button:hover { background-color: var(--bg-tertiary); color: var(--text-primary); }
    .tab-button.active { color: var(--text-primary); border-bottom-color: var(--accent-color); }
    .content-area {
        padding: 2rem;
        flex: 1; /* Allow this area to grow and fill available space */
        overflow-y: auto; /* Add a vertical scrollbar ONLY when needed */
    }
    .dashboard-list { gap: 1rem; }
    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        align-items: center;
    }
    .icon { margin-right: 0.75rem; color: var(--accent-color); }
    .subsection-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-secondary);
        margin-bottom: 1.25rem;
        margin-top: 1.5rem;
    }
    .info-item {
        background-color: var(--bg-secondary);
        padding: 1rem;
        border-radius: 0.5rem;
        border-left: 3px solid var(--accent-color);
        margin-bottom: 1rem;
        opacity: 1; /* ADD THIS LINE: Reduces intensity. Use values between 0 and 1. */
    }
    .info-item strong { color: var(--accent-color); }
    .skills-grid { display: flex; flex-wrap: wrap; gap: 0.75rem; }
    .skill-tag {
        background-color: rgba(6, 182, 212, 0.1);
        color: var(--accent-color);
        font-size: 1rem;
        font-weight: 500;
        padding: 0.5rem 1rem;
        border-radius: 9999px;
    }
    .skill-tag.soft-skill { background-color: rgba(139, 92, 246, 0.1); color: #a78bfa; }
    .skill-tag.language-skill {
        background-color: rgba(16, 185, 129, 0.1); /* A shade of green */
        color: #34d399;
    }
    .item-card {
        background-color: var(--bg-secondary);
        padding: 1.5rem;
        border-radius: 0.5rem;
        border: 1px solid var(--border-color);
        box-shadow: 0 1px 2px 0 rgb(0 0 0 / 0.2);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        margin-bottom: 1.5rem;
        font-size: 0.75rem;
    }
    .item-card:hover { transform: translateY(-2px); box-shadow: 0 7px 10px 0 rgba(0, 195, 255, 0.75); }
    .item-title { font-size: 1.25rem; font-weight: 600; color: var(--text-primary); }
    .item-subtitle { color: var(--text-secondary); }

    /* --- TIMELINE STYLES --- */
    .timeline-container { position: relative; }
    .timeline-container::before {
        content: '';
        position: absolute;
        left: 1.5rem;
        top: 0;
        bottom: 0;
        width: 2px;
        background-color: var(--border-color);
    }
    .timeline .item-card {
        position: relative;
        padding-left: 4rem;
        margin-bottom: 2rem;
    }

    /* --- Custom Scrollbar Styling --- */

    /* For Firefox */
    .content-area {
        scrollbar-width: thin;
        scrollbar-color: var(--accent-color) var(--bg-secondary);
    }

    /* For Chrome, Safari, Edge, and other WebKit browsers */
    .content-area::-webkit-scrollbar {
        width: 10px; /* Width of the scrollbar */
    }

    .content-area::-webkit-scrollbar-track {
        background: var(--bg-secondary); /* The track (the background) */
        border-radius: 5px;
    }

    .content-area::-webkit-scrollbar-thumb {
        background-color: var(--accent-color); /* The draggable handle */
        border-radius: 5px;
        border: 2px solid var(--bg-secondary); /* Creates a nice padding effect */
    }

    .content-area::-webkit-scrollbar-thumb:hover {
        background-color: #0891b2; /* A slightly darker cyan for hover */
    }
    
    .timeline .item-card::before {
        content: '';
        position: absolute;
        left: calc(1.5rem - 7px);
        top: 1.5rem;
        height: 16px;
        width: 16px;
        border-radius: 50%;
        background-color: var(--bg-primary);
        border: 3px solid var(--accent-color);
        z-index: 1;
    }

    .header-text {
        margin-left: 1.5rem; /* Adjust this value to get the exact spacing you want */
    }

    .header-text h1 {
        font-size: 1.25rem; /* Equivalent to text-3xl. Default was 2.25rem (text-4xl) */
    }

    .header-text p {
        font-size: 0.7rem; /* Equivalent to text-3xl. Default was 2.25rem (text-4xl) */
    }

    /* --- ANIMATION STYLES --- */
    .item-card, .info-item, .skill-tag {
        animation: slideUpFadeIn 0.5s ease-out forwards;
        opacity: 0;
    }

    @@keyframes slideUpFadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Razor loop to generate staggered animation delays */
    @for (int i = 1; i <= 10; i++)
    {
        var delay = (i - 1) * 0.1;
        <text>
        .item-card:nth-child(@(i)),
        .info-item:nth-child(@(i)),
        .skill-tag:nth-child(@(i)) {
            animation-delay: @(delay.ToString("0.0", CultureInfo.InvariantCulture))s;
        }
        </text>
    }
</style>

